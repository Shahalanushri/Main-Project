<!-- Add Font Awesome for Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f4f7fc;
    }

    .container {
        max-width: 900px;
    }

    .card {
        border-radius: 15px;
        border: none;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        background: white;
        padding: 25px;
        transition: 0.3s ease-in-out;
    }

    .card:hover {
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }

    .contact-card {
        border-radius: 12px;
        transition: all 0.3s ease-in-out;
        border: none;
        background: white;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        padding: 20px;
        text-align: center;
    }

    .contact-card:hover {
        transform: translateY(-5px);
        box-shadow: 0px 8px 18px rgba(0, 0, 0, 0.15);
    }

    .contact-icon {
        font-size: 22px;
        color: white;
        padding: 12px;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: auto;
        transition: all 0.3s ease;
    }

    .contact-type-phone {
        background-color: #28a745;
    }

    .contact-type-email {
        background-color: #007bff;
    }

    .contact-type-other {
        background-color: #6c757d;
    }

    .contact-card .btn-danger {
        border-radius: 8px;
        transition: 0.3s ease;
        font-weight: 500;
    }

    .contact-card .btn-danger:hover {
        background-color: #dc3545;
        transform: scale(1.05);
    }

    .btn-dark {
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-dark:hover {
        background: #343a40;
        transform: scale(1.05);
    }

    .alert {
        border-radius: 10px;
        padding: 15px;
        background: #ffe5e5;
        color: #b71c1c;
        font-weight: 500;
        text-align: center;
    }

    h4 {
        font-size: 1.6rem;
        font-weight: 600;
        color: #2c3e50;
        text-align: center;
        margin-bottom: 20px;
    }

    .contact-details {
        margin-top: 10px;
    }

    .contact-details h6 {
        font-weight: 600;
        color: #34495e;
        font-size: 1.2rem;
    }

    .contact-details p {
        font-size: 1rem;
        color: #7f8c8d;
        margin-bottom: 5px;
    }
</style>

<div class="page-content-wrapper p-3">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h4>ðŸ“ž Maintenance Contacts</h4>

                {{#if mcontacts.length}}
                <div class="row">
                    {{#each mcontacts}}
                    <div class="col-md-6 mb-3">
                        <div class="card contact-card">
                            <div class="contact-icon 
                                {{#if (eq this.type 'Phone')}} contact-type-phone 
                                {{else if (eq this.type 'Email')}} contact-type-email 
                                {{else}} contact-type-other {{/if}}">
                                <i class="{{#if (eq this.type 'Phone')}} fa-solid fa-phone 
                                   {{else if (eq this.type 'Email')}} fa-solid fa-envelope 
                                   {{else}} fa-solid fa-user {{/if}}"></i>
                            </div>
                            <div class="contact-details">
                                <h6>{{this.name}}</h6>
                                <p class="text-muted">{{this.type}}</p>
                                <p><strong>{{this.info}}</strong></p>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{else}}
                <div class="alert">
                    <h5 class="alert-heading">ðŸš¨ No Maintenance Contacts Found</h5>
                    <p class="mb-0">Add a maintenance contact to manage them here.</p>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>

<script>
    function deleteContact(contactId) {
        if (confirm("Are you sure you want to delete this contact?")) {
            fetch(`/delete-contact/${contactId}`, { method: 'GET' })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert("âŒ Failed to delete contact.");
                    }
                })
                .catch(error => console.error("Error:", error));
        }
    }
</script>

