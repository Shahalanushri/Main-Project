<style>
    .gallery-card {
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        margin-bottom: 15px;
        transition: 0.3s ease-in-out;
    }

    .gallery-card:hover {
        transform: scale(1.02);
    }

    .gallery-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-bottom: 2px solid #ddd;
    }

    .gallery-card-body {
        padding: 10px;
        text-align: center;
    }

    .edit-btn {
        background-color: #28a745;
        color: white;
        font-size: 12px;
        padding: 5px 10px;
        border-radius: 5px;
        display: inline-block;
        margin-top: 5px;
    }
</style>

<div class="page-content-wrapper p-2 pt-4">
    <div class="container mt-4">
        <div class="card">
            <div class="card-body">
                <p class="fw-bold">Manage Galleries</p>
                <a href="/add-gallery" class="btn btn-dark btn-sm mb-4">+ Add Gallery</a>

                <div class="row">
                    {{#each galleries}}
                    <div class="col-md-4">
                        <div class="gallery-card">


                            <img src="/images/gallery-images/{{this._id}}.png" alt="Gallery Image">





                            <div class="gallery-card-body">
                                <h6><b>{{this.title}}</b></h6>
                                <p>{{this.desc}}</p>
                                {{!-- <a href="/edit-gallery/{{this._id}}" class="edit-btn">Edit</a> --}}
                                <a href="/add-photos/{{this._id}}" class="edit-btn">Add Photos</a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>