<style>
    .bg-overlay::after {
        position: absolute;
        content: '';
        background-color: #000000b5;
        opacity: 0.75;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        z-index: -1;
    }

    .cu-btn {
        border-radius: 100px !important;
    }

    .about-img {
        border-radius: 20px;
    }

    .ct-btn {
        font-size: 11px;
        border-radius: 50px;
    }

    .tiny-slider-one-wrapper .single-hero-slide {
        position: relative;
        z-index: 1;
        width: 100%;
        height: 200px !important;
        background-position: center center;
        background-size: cover;
    }

    .form-control.form-control-clicked {
        background-color: hsl(0, 31%, 95%);
        border-color: #c6c6c6;
        color: #073984;
    }
</style>
<div class="page-content-wrapper p-2 pt-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5>Manage Announcements</h5>
            <a href="/add-activity" class="btn btn-dark btn-sm">+ Add Announcement</a>
        </div>

        <div class="row">
            {{#each activities}}
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm">
                    <img src="/images/activity-images/{{this._id}}.png" class="card-img-top" alt="Announcement Image" style="height: 180px; object-fit: cover;">
                    <div class="card-body">
                        <h6 class="card-title"><b>{{this.title}}</b></h6>
                        <p class="card-text">{{this.desc}}</p>
                        <small class="text-muted">For: {{this.to}}</small><br>
                        <small class="text-muted">Date: {{this.date}}</small>
                        <div class="mt-3 d-flex justify-content-between">
                            <a href="/delete-activity/{{this._id}}" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>



<script>
    function elementsSearch() {
        var input = document.getElementById('elementsSearchInput');
        var filter = input.value.toUpperCase();
        var list = document.getElementById("elementsSearchList");
        var listItem = list.getElementsByClassName('col-4');

        for (i = 0; i < listItem.length; i++) {
            var a = listItem[i];
            var textValue = a.textContent || a.innerText;
            if (textValue.toUpperCase().indexOf(filter) > -1) {
                listItem[i].style.display = "";
            } else {
                listItem[i].style.display = "none";
            }
        }
    }

</script>



</div>