<style>
    .facility-card {
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .facility-card:hover {
        transform: translateY(-5px);
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
    }

    .facility-img {
        width: 100%;
        height: 150px;
        object-fit: cover;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .facility-title {
        font-weight: bold;
        font-size: 1.1rem;
    }

    .facility-subtitle {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .availability-badge {
        font-size: 0.85rem;
        padding: 5px 10px;
        border-radius: 20px;
    }

    .available {
        background-color: #28a745;
        color: white;
    }

    .unavailable {
        background-color: #dc3545;
        color: white;
    }
</style>

<div class="page-content-wrapper p-2 pt-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0">Manage Facilities</h5>
            <a href="/add-facilities" class="btn btn-dark btn-sm">+ Add Facility</a>
        </div>

        <div class="row">
            {{#each facilities}}
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card facility-card shadow-sm">
                    <img src="/images/facilitie-images/{{this._id}}.png" class="facility-img" alt="Facility Image">
                    <div class="card-body text-center">
                        <p class="facility-title">{{this.title}}</p>
                        <p class="facility-subtitle">{{this.subtitle}}</p>
                        <span class="availability-badge {{#if this.availability}} available {{else}} unavailable {{/if}}">
                            {{#if this.availability}} Available {{else}} Unavailable {{/if}}
                        </span>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
