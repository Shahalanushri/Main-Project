<div class="page-content-wrapper p-2 pt-4">

    <div class="container mt-4">
        <div class="card">
            <div class="card-body">
                <h5>Add New Gallery</h5> <br>
                <form action="/add-gallery" enctype="multipart/form-data" method="post">
                    <div class="form-group">
                        <label class="form-label" for="exampleInputText">Title</label>
                        <input class="form-control" name="title" id="exampleInputText" type="text"
                            placeholder="Enter The Title" required>
                    </div>


                    <div class="form-group">
                        <label class="form-label" for="defaultSelect">Category</label>
                        <select class="form-select" id="defaultSelect" name="Category"
                            aria-label="Default select example" required>
                            <option value="" selected disabled>Select Category</option>
                            <option value="Event">Event</option>
                            <option value="Cultural">Cultural Programes</option>
                            <option value="Sports">Sports</option>
                            <option value="Music">Music
                            </option>
                            <option value="Business">Social Services</option>
                            <option value="Motivational">Motivational</option>
                            <option value="Conference">Conference</option>
                            <option value="Meetups">Meetups</option>
                            <option value="Others">Others</option>

                        </select>
                    </div>




                    <div class="form-group">
                        <label class="form-label" for="exampleTextarea1">Desc</label>
                        <textarea class="form-control" id="exampleTextarea1" name="desc" cols="3" rows="5"
                            placeholder="Write something..." required></textarea>
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="Image">Images</label>
                        <input class="form-control" name="Image" id="Image" type="file" required>
                    </div>


                    <button class="btn btn-primary w-100 d-flex align-items-center justify-content-center"
                        type="submit">Add Event
                        <svg class="bi bi-arrow-right-short" width="24" height="24" viewBox="0 0 16 16"
                            fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8z">
                            </path>
                        </svg>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>