        border-radius: 4px;
        font-weight: bold;
        position: relative;
    }

    .event {
        background: #28a745;
        color: white;
        padding: 5px;
        margin-top: 5px;
        border-radius: 4px;
        font-size: 12px;
        position: relative;
    }

    .event::after {
        content: attr(data-note);
        display: none;
        position: absolute;
        bottom: 100%;
        left: 50%;
        transform: translateX(-50%);
        background: black;
        color: white;
        padding: 5px;
        border-radius: 4px;
        font-size: 12px;
        white-space: nowrap;
        z-index: 9999;
    }

    .event:hover::after {
        display: block;
    }
</style>

