<div class="page-content-wrapper p-2 pt-4">
    <div class="container mt-4">
        <div class="card">
            <div class="card-body">
                <h5>Add More Photos for "{{event.title}}"</h5>
                <p>{{event.desc}}</p>

                <form action="/upload-photos/{{event._id}}" enctype="multipart/form-data" method="POST">
                    <div class="form-group">
                        <label class="form-label">Upload Images</label>
                        <input class="form-control" type="file" name="images" multiple required>
                    </div>

                    <button class="btn btn-primary w-100 mt-3" type="submit">Upload Photos</button>
                </form>
            </div>
        </div>
    </div>
</div>
