<!-- Include Font Awesome for Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<style>
    body {
        background-color: rgb(234, 234, 234);
    }

    .page-content-wrapper {
        padding: 20px;
    }

    .card {
        border-radius: 10px;
        transition: all 0.3s ease-in-out;
    }

    .single-product-card:hover {
        transform: scale(1.05);
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
    }

    .feature-icon {
        font-size: 40px;
        margin-bottom: 10px;
        transition: all 0.3s ease-in-out;
    }

    .feature-card:hover .feature-icon {
        transform: scale(1.1);
    }

    /* Icon Colors */
    .facilities {
        color: #007bff;
    }

    /* Blue */
    .emergency {
        color: #dc3545;
    }

    /* Red */
    .events {
        color: #17a2b8;
    }

    /* Teal */
    .gallery {
        color: #ffc107;
    }

    /* Yellow */
    .maintenance {
        color: #28a745;
    }

    /* Green */
    .survey {
        color: #6610f2;
    }

    /* Purple */
    .business {
        color: #fd7e14;
    }

    /* Orange */
    .alerts {
        color: #6c757d;
    }

    /* Gray */
</style>

<div class="page-content-wrapper">
    <div class="container">
        <div class="top-products-area pt-4 pb-4" id="elementsSearchList">
            <div class="card mb-3">
                <div class="card-body p-3">
                    <div class="form-group mb-0">
                        <input class="form-control" id="elementsSearchInput" type="text" onkeyup="elementsSearch()"
                            placeholder="Search Services...">
                    </div>
                </div>
            </div>
            <div class="row g-3">
                <!-- Services Grid -->
                <div class="col-6 col-sm-4 col-lg-3">
                    <div class="card single-product-card text-center">
                        <div class="card-body p-3">
                            <i class="fa-solid fa-building feature-icon facilities"></i>
                            <a class="product-title d-block" href="/facilities">Facilities</a>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-sm-4 col-lg-3">
                    <div class="card single-product-card text-center">
                        <div class="card-body p-3">
                            <i class="fa-solid fa-ambulance feature-icon emergency"></i>
                            <a class="product-title d-block" href="/emergency">Emergency</a>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-sm-4 col-lg-3">
                    <div class="card single-product-card text-center">
                        <div class="card-body p-3">
                            <i class="fa-solid fa-calendar-alt feature-icon events"></i>
                            <a class="product-title d-block" href="/events">Events</a>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-sm-4 col-lg-3">
                    <div class="card single-product-card text-center">
                        <div class="card-body p-3">
                            <i class="fa-solid fa-images feature-icon gallery"></i>
                            <a class="product-title d-block" href="/gallery">Gallery</a>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-sm-4 col-lg-3">
                    <div class="card single-product-card text-center">
                        <div class="card-body p-3">
                            <i class="fa-solid fa-tools feature-icon maintenance"></i>
                            <a class="product-title d-block" href="/main">Maintenance</a>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-sm-4 col-lg-3">
                    <div class="card single-product-card text-center">
                        <div class="card-body p-3">
                            <i class="fa-solid fa-poll feature-icon survey"></i>
                            <a class="product-title d-block" href="/survey">Survey</a>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-sm-4 col-lg-3">
                    <div class="card single-product-card text-center">
                        <div class="card-body p-3">
                            <i class="fa-solid fa-store feature-icon business"></i>
                            <a class="product-title d-block" href="/business">Business</a>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-sm-4 col-lg-3">
                    <div class="card single-product-card text-center">
                        <div class="card-body p-3">
                            <i class="fa-solid fa-bell feature-icon alerts"></i>
                            <a class="product-title d-block" href="/alerts">Alerts</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function elementsSearch() {
        var input = document.getElementById('elementsSearchInput');
        var filter = input.value.toUpperCase();
        var list = document.getElementById("elementsSearchList");
        var listItem = list.getElementsByClassName('col-6');

        for (var i = 0; i < listItem.length; i++) {
            var textValue = listItem[i].textContent || listItem[i].innerText;
            listItem[i].style.display = textValue.toUpperCase().includes(filter) ? "" : "none";
        }
    }
</script>