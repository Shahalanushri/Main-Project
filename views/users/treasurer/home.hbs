<style>
    .bg-overlay::after {
        position: absolute;
        content: '';
        background-color: #000000b5;
        opacity: 0.75;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        z-index: -1;
    }

    .cu-btn {
        border-radius: 100px !important;
    }

    .about-img {
        border-radius: 20px;
    }

    .ct-btn {
        font-size: 11px;
        border-radius: 50px;
    }

    .tiny-slider-one-wrapper .single-hero-slide {
        position: relative;
        z-index: 1;
        width: 100%;
        height: 200px !important;
        background-position: center center;
        background-size: cover;
    }

    .form-control.form-control-clicked {
        background-color: hsl(0, 31%, 95%);
        border-color: #c6c6c6;
        color: #073984;
    }
</style>

<div class="page-content-wrapper">

    <div class="container pt-5 mb-3">
        <h4>Welcome to Treasurer Hub</h4>
    </div>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <p>Trach Payments</p>
                <table class="w-100" id="dataTable">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Resident Name</th>
                            <th>Payment</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <td>{{formatDate this.date}}</td>
                            <td>{{this.Fname}} {{this.Lname}}</td>
                            <td class="text-success">Rs.{{this.amount}}/-</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<script>
    function elementsSearch() {
        var input = document.getElementById('elementsSearchInput');
        var filter = input.value.toUpperCase();
        var list = document.getElementById("elementsSearchList");
        var listItem = list.getElementsByClassName('col-4');

        for (i = 0; i < listItem.length; i++) {
            var a = listItem[i];
            var textValue = a.textContent || a.innerText;
            if (textValue.toUpperCase().indexOf(filter) > -1) {
                listItem[i].style.display = "";
            } else {
                listItem[i].style.display = "none";
            }
        }
    }

</script>



</div>