<div class="container-md mt-3 p-5">
    <h4 class="mb-3">Your Event Bookings</h4>

    {{#if orders}}
    <div class="row">
        {{#each orders}}
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="text-center">
                        <img src="/images/event-images/{{this.event._id}}.png" class="img-fluid rounded" alt=""
                            style="max-width: 100%; height: 200px; object-fit: cover;">
                    </div>
                    <h5 class="mt-3 text-truncate">{{this.event.title}}</h5>
                    <p class="text-muted">{{this.event.desc}}</p>
                    <div class="mt-auto">
                        <a href="/cancel-order/{{this._id}}"
                            onclick="return confirm('Are You Sure to Cancel This Booking ?')"
                            class="btn btn-danger">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    {{else}}
    <div class="alert alert-secondary text-center">
        <h4>You Have Booked Nothing!</h4>
        <p>Book an event now.</p>
        <a href="/home" class="btn btn-primary">Book Now</a>
    </div>
    {{/if}}
</div>

