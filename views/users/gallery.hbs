<div class="page-content-wrapper p-5">

    <div class="container-lg">
        <div class="card">
            <div class="card-body">
                <div class="standard-tab">
                    <div class="table-responsive">
                    <ul class="nav rounded-lg mb-2 p-2 shadow-sm" id="affanTabs1" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="btn active" id="All" data-bs-toggle="tab" data-bs-target="#AllTab"
                                type="button" role="tab" aria-controls="AllTab" aria-selected="true">All</button>
                        </li>

                        <li class="nav-item" role="presentation">
                            <button class="btn" id="Event" data-bs-toggle="tab" data-bs-target="#EventTab" type="button"
                                role="tab" aria-controls="EventTab" aria-selected="false">Event</button>
                        </li>

                        <li class="nav-item" role="presentation">
                            <button class="btn" id="Cultural" data-bs-toggle="tab" data-bs-target="#CulturalTab"
                                type="button" role="tab" aria-controls="CulturalTab" aria-selected="false">Cultural
                                Programs</button>
                        </li>

                        <li class="nav-item" role="presentation">
                            <button class="btn" id="Sports" data-bs-toggle="tab" data-bs-target="#SportsTab"
                                type="button" role="tab" aria-controls="SportsTab" aria-selected="false">Sports</button>
                        </li>

                        <li class="nav-item" role="presentation">
                            <button class="btn" id="Music" data-bs-toggle="tab" data-bs-target="#MusicTab" type="button"
                                role="tab" aria-controls="MusicTab" aria-selected="false">Music</button>
                        </li>

                        <li class="nav-item" role="presentation">
                            <button class="btn" id="Business" data-bs-toggle="tab" data-bs-target="#BusinesTab"
                                type="button" role="tab" aria-controls="BusinesTab" aria-selected="false">Social Services</button>
                        </li>

                        <li class="nav-item" role="presentation">
                            <button class="btn" id="Motivational" data-bs-toggle="tab" data-bs-target="#MotivationalTab"
                                type="button" role="tab" aria-controls="MotivationalTab"
                                aria-selected="false">Motivational</button>
                        </li>

                        <li class="nav-item" role="presentation">
                            <button class="btn" id="Conference" data-bs-toggle="tab" data-bs-target="#ConferenceTab"
                                type="button" role="tab" aria-controls="ConferenceTab"
                                aria-selected="false">Conference</button>
                        </li>

                        <li class="nav-item" role="presentation">
                            <button class="btn" id="Meetups" data-bs-toggle="tab" data-bs-target="#MeetupsTab"
                                type="button" role="tab" aria-controls="MeetupsTab"
                                aria-selected="false">Meetups</button>
                        </li>

                        <li class="nav-item" role="presentation">
                            <button class="btn" id="Others" data-bs-toggle="tab" data-bs-target="#OthersTab"
                                type="button" role="tab" aria-controls="OthersTab" aria-selected="false">Others</button>
                        </li>
                    </ul>
                    </div>


                    <div class="tab-content rounded-lg p-3 shadow-sm" id="affanTabs1Content">
                        <!-- All Categories Tab -->
                        <div class="tab-pane fade show active" id="AllTab" role="tabpanel" aria-labelledby="All">
                            <div class="row">
                                {{#each galleries}}
                                <div class="col-4 mb-3">
                                    <a href="/images/gallery-images/{{this._id}}.png">
                                        <img src="/images/gallery-images/{{this._id}}.png" width="70%" alt="">
                                    </a>
                                    <h6 class="mt-3">{{this.title}}</h6>
                                    <p class="mb-0">{{this.desc}}</p>
                                </div>
                                {{/each}}
                            </div>
                        </div>

                        <!-- Dynamic Category Tabs -->
                        {{#each galleries}}
                        <div class="tab-pane fade" id="{{this.Category}}Tab" role="tabpanel"
                            aria-labelledby="{{this.Category}}">
                            <div class="row">
                                <div class="col-4 mb-3">
                                    <a href="/images/gallery-images/{{this._id}}.png">
                                        <img src="/images/gallery-images/{{this._id}}.png" width="70%" alt="">
                                    </a>
                                    <h6 class="mt-3">{{this.title}}</h6>
                                    <p class="mb-0">{{this.desc}}</p>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>